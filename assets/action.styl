@keyframes Ups
  50%
    transform translateX(3px) rotate(1deg)
  100%
    transform translateX(-3px) rotate(-1deg)

.btn, button
  line-height: 1;
  padding .7em 1em
  
  display inline-block
  margin .5em
  text-decoration none
  white-space: nowrap;
  cursor pointer
  border-radius .4em //6px
  letter-spacing 1px
  //color #FFF
  //background $blue
  border .1em solid $blue //2px solid $blue
  background #FFF
  color $blue


  box-shadow: 4px 4px 0 0 rgba(#888, .4), 0 2px 10px 0 rgba(#000 .2)
  //box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

  transition: background-color 0.3s, color 0.3s //, transform .3s;
  //transition: all 0.3s;
  &:hover
    color #FFF
    background $blue
    //background $blue //+ 10
    //transform: translateY(-2px)
  &:active
    //background #000
    //outline 2px solid #CCC
    transform: translate(.2em, .2em)
    //box-shadow: none
  
  

  &.-red
    item-btn($red)
  &.-green
    item-btn($green)
  &.-orange
    item-btn($orange)


  &.-lite
    background #FFF
    color #BBB
    border-color #FFF
    &:hover
      //border-color $blue
      color $blue

  &.-circle
    border-radius: 3em;
  &.-XL
    padding .7em 1.2em
    font-size 1.5em

  &[disabled]
    border-color #9e9e9e //#AAA
    background #EEE
    color #CCC
    cursor wait
    &:hover
      animation Ups .15s infinite	//ease-in