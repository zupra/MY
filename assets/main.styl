@import url('https://fonts.googleapis.com/css?family=Roboto:400,700&subset=cyrillic')

*
  margin 0
  padding 0
  box-sizing border-box
::-webkit-scrollbar
  display: none  


@import 'settings'

body
  //'Roboto Condensed'
  font 100%/1.6 'Roboto', 'Helvetica Neue', sans-serif;
  color #444



h1,h2,h3,h4,h5,p
  margin 1em 0 .75em
  //margin 0 0 .75em
.H1,h1,h2,h3,h4
  line-height 1.2
h1,h2
  color $header
  font-weight: 400
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
a
  color $link


p
  margin-bottom 1em

hr
  margin 1em 0
  height: 1px
  border: none
  border-top: 1px solid rgba(#777, .5)
#main hr
  margin: 3em





// img
//   display inline-block
//   max-width: 100%

figure
  img
    display block
figcaption
  text-align center
  //padding 1em
/*
