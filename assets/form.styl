//скрыть placeholder при фокусе
:focus::-webkit-input-placeholder {color: transparent}
:focus::-moz-placeholder          {color: transparent}
:focus:-moz-placeholder           {color: transparent}
:focus:-ms-input-placeholder      {color: transparent}


// color placeholder
::-webkit-input-placeholder {color: #999;}
::-moz-placeholder          {color: #999;} //Firefox 19+ 
:-moz-placeholder           {color: #999;} //Firefox 18-
:-ms-input-placeholder      {color: #999;}



// ? .flex_col
form, .form
  //margin 1em 0
  input, textarea, select
    margin-bottom .7em
    //display block
    //width 100%


input, select, textarea, button
  // RESET
  //line-height 1
  outline 0
  box-shadow none
  font inherit




input, textarea, select
  padding: .5rem .75rem
  appearance none
  border-radius 3px
  border 1px solid $border
  &:focus
    border-color $header

textarea
  min-height 8em
  resize vertical
  overflow auto
label
  display block
label, select
  cursor pointer


.search
  padding-left 2.4em
  background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='13' height='13'><g stroke-width='2' stroke='blueviolet'><circle cx='5' cy='5'  r='4' style='fill:none;' /><line x1='9' y1='9' x2='13' y2='13' /></g></svg>") 1em 50% no-repeat
  &:focus
    padding-left .75rem //inherit
    background none





select
  padding-right 2em
  background #FFF url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='22' height='12'><polygon points='0,0 12,0 6,12' fill='orange'/></svg>") right no-repeat



input
  &.-XL
    border-radius 0.25em
    //border 2px solid #CCC
    font-size 1.5rem
    padding 0.5em 1em



